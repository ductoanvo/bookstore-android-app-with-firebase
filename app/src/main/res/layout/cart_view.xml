<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/bookThumbnail_CartScreen"
        android:layout_width="107dp"
        android:layout_height="137dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.052"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/vgdihelvlzo9nym8zjvs" />

    <TextView
        android:id="@+id/tvBookName_CartScreen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Book Name"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.101"
        app:layout_constraintStart_toEndOf="@+id/bookThumbnail_CartScreen"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvCartQuantity_CartScreen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="4dp"
        android:text="Quantity: 1"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/tvBookName_CartScreen"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/tvBookName_CartScreen"
        app:layout_constraintTop_toBottomOf="@+id/tvBookName_CartScreen" />

    <TextView
        android:id="@+id/tvTotalLine_CartScreen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Total Price: 0.00 VND"
        android:textColor="#FF0000"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/tvCartQuantity_CartScreen"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/tvCartQuantity_CartScreen"
        app:layout_constraintTop_toBottomOf="@+id/tvCartQuantity_CartScreen" />

    <Button
        android:id="@+id/btnDetaleProduct_CartScreen"
        android:layout_width="70dp"
        android:layout_height="37dp"
        android:backgroundTint="#FF0000"
        android:text="XÃ³a"
        app:layout_constraintBottom_toBottomOf="@+id/bookThumbnail_CartScreen"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.888"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/bookThumbnail_CartScreen"
        app:layout_constraintVertical_bias="0.55" />
</androidx.constraintlayout.widget.ConstraintLayout>